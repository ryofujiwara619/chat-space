.chat
  .chat__top
    .container
      .chat__top--left
        .chat__top--left--group
          = @group.name
        .chat__top--left--members
          Member: ryo5
      = link_to "Edit",edit_group_path(@group.id), class:"chat__top--right"

  .chat__middle
    .container
      .chat__middle--message
